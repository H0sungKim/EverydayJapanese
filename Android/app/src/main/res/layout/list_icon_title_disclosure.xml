<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/space_xs"
        android:paddingBottom="@dimen/space_xs"
        android:paddingStart="@dimen/space_m"
        >

        <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="@dimen/icon_size_x5s"
            android:layout_height="@dimen/icon_size_x5s"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/space_xxs" />

        <TextView
            android:id="@+id/textview_title"
            style="@style/font_p2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/fg0" />

        <ImageView
            android:id="@+id/imageview_disclosure"
            android:src="@drawable/img_dark_disclosure_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/space_x5s" />

    </LinearLayout>

</FrameLayout>