<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/space_m"
        android:paddingBottom="@dimen/space_m">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_sound"
                style="@style/font_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/fg4" />

            <TextView
                android:id="@+id/textview_word"
                style="@style/font_t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/fg0" />

            <TextView
                android:id="@+id/textview_meaning"
                style="@style/font_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/fg0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_m"
            android:orientation="vertical"

            >

            <ImageButton
                android:id="@+id/button_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_m"
                android:background="@color/transparent"
                android:src="@drawable/img_favorite_off"
                app:tint="@color/fg0" />

            <ImageButton
                android:id="@+id/button_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_m"
                android:background="@color/transparent"
                android:src="@drawable/img_sound"
                app:tint="@color/fg0" />

            <ImageButton
                android:id="@+id/button_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/img_down"
                app:tint="@color/fg0"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textview_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_m"
            android:layout_marginTop="@dimen/space_x3s"
            android:layout_marginBottom="@dimen/space_x3s"
            style="@style/font_p1"
            android:textColor="@color/fg0"
            />
        <TextView
            android:id="@+id/textview_trans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_m"
            android:layout_marginBottom="@dimen/space_x3s"
            style="@style/font_p2"
            android:textColor="@color/fg4"
            />
    </LinearLayout>
</LinearLayout>