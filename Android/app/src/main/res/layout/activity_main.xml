<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg3"
                android:orientation="vertical"
                tools:context=".scene.main.MainActivity">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_m"
                    android:layout_marginTop="@dimen/space_m"
                    android:layout_marginBottom="@dimen/space_m"
                    android:background="@drawable/shape_rectangle_8dp"
                    android:backgroundTint="@color/bg0"
                    android:clipToOutline="true"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/space_xs"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_common_kanji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_m"
                    android:layout_marginBottom="@dimen/space_m"
                    android:background="@drawable/shape_rectangle_8dp"
                    android:backgroundTint="@color/bg0"
                    android:clipToOutline="true"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/space_xs"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_vocabulary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_m"
                    android:layout_marginBottom="@dimen/space_m"
                    android:background="@drawable/shape_rectangle_8dp"
                    android:backgroundTint="@color/bg0"
                    android:clipToOutline="true"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/space_xs"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>