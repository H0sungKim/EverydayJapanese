<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.EverydayJapanese" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- custom theme -->
        <item name="colorPrimary">@color/fg_brand</item>

        <item name="android:textColorPrimary">@color/fg1</item>
        <item name="android:textColorSecondary">@color/fg1</item>
        <item name="android:textColorTertiary">@color/fg1</item>
        <item name="editTextColor">@color/fg1</item>

        <!-- status bar color -->
        <item name="android:colorPrimaryDark">@color/bg3</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--default font-family 적용-->
        <item name="android:textViewStyle">@style/font_p2</item>
        <item name="android:editTextStyle">@style/font_p2</item>
        <item name="android:radioButtonStyle">@style/font_p2</item>
        <item name="android:checkboxStyle">@style/font_p2</item>

    </style>

    <style name="ActionSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysVisible</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.constant.ControlBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/fg5</item>
        <item name="colorControlActivated">@color/fg_brand</item>
    </style>
    <style name="Theme.constant.CheckBox" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/transparent</item>
        <item name="android:drawableStart">@drawable/selector_checkbox</item>
        <item name="android:drawablePadding">@dimen/space_xs</item>
    </style>
    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/fg0</item>
        <item name="colorAccent">@color/fg_brand</item>
        <item name="android:textColorPrimary">@color/fg0</item>
        <item name="android:textColorSecondary">@color/fg0</item>
        <item name="android:headerBackground">@color/fg_brand_light</item>
    </style>

    <style name="CustomTimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/fg0</item> <!-- 주요 텍스트 색상 -->
        <item name="android:textColorSecondary">@color/fg0</item> <!-- 보조 텍스트 색상 -->
    </style>
</resources>